        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Grid>
        <local:LedSegment x:Name="DigitHourTens"
                          Margin="31,41,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top" />
        <Button x:Name="button"
                Width="75"
                Margin="326,59,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="button_Click"
                Content="Button" />
        <local:LedSegment x:Name="DigitHourOnes"
                          Margin="119,41,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top" />
        <local:LedColon Width="36"
                        Height="135"
                        Margin="209,52,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
    </Grid>
</Window>
